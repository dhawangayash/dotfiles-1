############################################################
## $XDG_CONFIG_DIR/mutt/muttrc                             #
## author: milomouse                                       #
## detail: originally based off p.brisbin's mutt config(s) #
############################################################

reset all
push V

# - intrinsic locations:
  set mbox_type        = Maildir
  set folder           = $H/mail
  set spoolfile        = "+FastMail/INBOX"
  set certificate_file = $XDG_CONFIG_DIR/mutt/certs
  set header_cache     = $XDG_CONFIG_DIR/mutt/cache/headers
  set message_cachedir = $XDG_CONFIG_DIR/mutt/cache/bodies
  set mailcap_path     = $XDG_CONFIG_DIR/mutt/mailcap
  set signature        = $XDG_CONFIG_DIR/mutt/sig
  set tmpdir           = /tmp/user-keep/${USER}

# - source gpg, colors and accounts:
#source /etc/Muttrc.gpg.dist
source $XDG_CONFIG_DIR/mutt/colors.muttrc
source $XDG_CONFIG_DIR/mutt/scoring
folder-hook FastMail/* source $XDG_CONFIG_DIR/mutt/fastmail.muttrc

# - network settings:
  set ssl_force_tls
#unset ssl_use_sslv2
  set ssl_use_sslv3
  set ssl_use_tlsv1
#  set ssl_usesystemcerts
  set ssl_verify_dates
  set ssl_verify_host
  set suspend
  set timeout = 3
unset use_ipv6

# - browsing mailboxes:
unset arrow_cursor
unset auto_tag
unset check_mbox_size
  set check_new
  set collapse_unread
  set delete = ask-yes
  set duplicate_threads
  set help
unset keep_flagged
  set mail_check = 0
unset maildir_trash
unset mark_old
unset meta_key
unset mh_purge
unset move
unset narrow_tree
unset read_only
  set save_empty
  set sort = threads
  set sort_aux = reverse-last-date-received
  set sort_browser = reverse-date
unset sort_re
unset status_on_top

# - reading/viewing messages:
  set allow_8bit
unset allow_ansi
  set crypt_autopgp
  set crypt_autosmime
  set crypt_timestamp
  set crypt_verify_sig = yes
  set digest_collapse
  set hide_thread_subject
unset honor_disposition
  set mailcap_sanitize
  set maildir_header_cache_verify
  set indent_string = "> "
  set ispell = "hunspell"
unset markers
  set menu_scroll
  set pager = "builtin"
  set pager_index_lines = 10
  set pager_context = 5
  set pager_stop
  set pipe_decode
  set print_command = "/bin/false"
  set query_command = "mutt_vc_query '%s'"
  set reverse_alias
  set reverse_name
  set sig_dashes
  set smart_wrap
  set thorough_search
  set tilde
  set wrap_search

# - composing/replying mail:
  set abort_nosubject = ask-yes
unset autoedit
unset askbcc
unset askcc
  set attribution = "On %d, %n wrote:"
unset confirmappend
  set confirmcreate
  set content_type = "text/plain"
  set copy = yes
  set crypt_replyencrypt
  set edit_headers
  set editor = "vim +/^$"
  set fast_reply
  set fcc_attach
unset fcc_clear
  set forward_format = "Fwd: %s"
  set forward_quote
unset hidden_host
  set honor_followup_to
unset ignore_list_reply_to
  set include = ask-yes
unset include_onlyfirst
  set postpone = yes
  set recall = ask-yes
  set realname = "Vincent"
  set reply_to
unset sig_on_top
  set weed

# - header information:
ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

# - order of preferred viewing formats:
auto_view text/html
alternative_order text/plain text/enriched text/html

# - un-bind some keys:
bind index,pager \# noop
bind index,pager \& noop
bind index,pager i  noop
bind index       t  noop
bind index,pager q  noop
bind index       z  noop
bind attach,browser,pager x noop

# - key-bindings:
bind pager /          search
bind pager k          previous-line
bind pager j          next-line
bind pager gg         top
bind pager G          bottom
bind pager K          previous-undeleted
bind pager J          next-undeleted
bind pager l          view-attachments
bind pager,index R    recall-message
#bind pager,index C    mail
bind index K          previous-unread
bind index J          next-unread
bind index l          display-message
bind browser l        select-entry
bind attach  l        view-attach
bind index ZZ         exit
bind attach,browser,pager z exit
bind index,browser gg first-entry
bind index,browser G  last-entry

# - macros:
macro index gh  "<change-folder>!<enter>" "go to INBOX"
macro index h   "c?" "view folders"
macro index \Cr "<tag-pattern>all<enter><tag-prefix><clear-flag>N<untag-pattern>all<enter>" "mark all as read"
macro index P   "<pipe-message>cat > ~/" "save message as"
macro index I   "<shell-escape>/usr/bin/offlineimap -c $XDG_CONFIG_DIR/.offlineimap/offlineimaprc -u blinkenlights -o<enter>" "sync IMAP"
macro index,pager \Cb ":set pipe_decode\n|urlview\n:unset pipe_decode\n" "extract URLs out of a message"

# - appearance / formatting:
set folder_format = "%3C| %u:%g [%N] %f %*. %t %4s %F"
set status_format = "───+ %f %m%?n? [+%n]?%?d? [-%d]?%?t? [*%t]? +%?p?───+ %p waiting to send +?─%>─[%P]──"
set query_format  = "%3c %t %-40.40a %-25.25n  %># %?e?%e?"
set alias_format  = "%4n %t %-20a %r"
set date_format   = "%y-%m-%d %I:%M:%S %Z"
set index_format  = "%3C| %-4c > %-19.19F  %s%*  %?X?[%X]? %Z|%2N| %d"
set quote_regexp  = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set reply_regexp  = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

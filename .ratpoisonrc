# ~/.ratpoisonrc
# milomouse <vincent@fea.st>
# complimenting ratpoison scripts found at: github.com/milomouse

exec ratpoison -c "source $HOME/.config/.deratify"

bind F1 exec ratpoison -c "select -" -c "only" -c "hsplit" -c "next" -c "focusright" -c "next" -c "vsplit" -c "next" -c "vsplit" -c "focusdown" -c "focusdown" -c "remove" -c "echo Layout 1"
bind F2 exec ratpoison -c "select -" -c "only" -c "vsplit" -c "next" -c "echo Layout 2"
bind F3 exec ratpoison -c "select -" -c "only" -c "vsplit" -c "next" -c "focusdown" -c "hsplit" -c "next" -c "echo Layout 3"
bind F4 exec ratpoison -c "select -" -c "only" -c "vsplit" -c "next" -c "hsplit" -c "next" -c "focusdown" -c "hsplit" -c "next" -c "echo Layout 4"
bind F5 exec ratpoison -c "select -" -c "only" -c "hsplit" -c "next" -c "echo Layout 5"

set font fixed-6
set winname class
set winfmt %n %s %t
set winliststyle column
set wingravity c
set transgravity se
set maxsizegravity c
set padding 1 0 1 0
set border 1
set barborder 0
set barpadding 4 4
set bargravity ne
set inputwidth 400
set fgcolor #876CBE
set bgcolor #090909
set waitcursor 3
set historysize 50
set maxundos 50
rudeness 12
escape s-semicolon

bind a exec ossrat -a
bind b exec synap
bind c exec urxvt
bind d time
bind e exec
bind f fselect
bind g exec firefox-nightly
bind h select -
bind H exec ratpoison -c "select -" -c "only"
bind i vsplit
bind j hsplit
bind k kill
bind l windows
bind m exec ratman
bind n curframe
bind o only
bind p exec urxvt -e ncmpcpp
bind q remove
bind r resize
bind s swap
bind t title
bind u undo
bind v version
bind w redisplay
bind x info
bind y redo
bind z lastmsg
bind Escape abort
bind minus dedicate 0
bind equal dedicate 1
bind Insert exec import -window root ~/foto/shot/$(date +%Y_%m_%d-%k%M).png 
bind Delete exec alock -bg shade:shade=30 -cursor glyph -auth pam 

definekey top s-n next
definekey top s-p prev
definekey top s-apostrophe focus
definekey top s-k focusup
definekey top s-j focusdown
definekey top s-h focusleft
definekey top s-l focusright
definekey top s-Tab focuslast
definekey top s-K exchangeup
definekey top s-J exchangedown
definekey top s-H exchangeleft
definekey top s-L exchangeright
definekey top s-C-k ratrelwarp 0 -7
definekey top s-C-j ratrelwarp 0 7
definekey top s-C-h ratrelwarp -7 0
definekey top s-C-l ratrelwarp 7 0
definekey top s-C-Return exec ratpoison -c "rathold down" -c "rathold up"

definekey top s-Home exec ossrat -t
definekey top s-End exec ossrat -s
definekey top s-Prior exec ossrat -p
definekey top s-Next exec ossrat -n
definekey top C-Next exec songrem -p
definekey top C-Delete exec songrem
definekey top XF86AudioRaiseVolume exec ossrat -i 1
definekey top XF86AudioLowerVolume exec ossrat -d 1
definekey top XF86AudioMute exec ossrat -m
definekey top XF86MonBrightnessUp exec moodlight -b
definekey top XF86MonBrightnessDown exec moodlight -d

definekey top s-comma rpwsp
definekey top s-period rpwsn
definekey top s-exclam rpwsm1
definekey top s-at rpwsm2
definekey top s-numbersign rpwsm3
definekey top s-dollar rpwsm4
definekey top s-percent rpwsm5
definekey top s-F1 rpws1
definekey top s-F2 rpws2
definekey top s-F3 rpws3
definekey top s-F4 rpws4
definekey top s-F5 rpws5
exec rpws init 5 -k
exec xsetroot -cursor_name left_ptr

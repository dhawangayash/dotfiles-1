## ~/.config/musca/musca_start
## milomouse <vincent[at]fea.st>

# try not to list default settings:
set startup /howl/conf/musca/musca_start
set frame_display_hidden 2
set frame_resize 10
set dmenu dmenu -i -p 'Musca: '
set border_width 1
#hook on ^(catchall|dedicate) border flip
hook on ^only border off
#hook on ^add pad 0 0 24 0
hook on ^(remove|vsplit|hsplit) refresh

# borders:
set border_focus #747474
set border_unfocus #303030
set border_dedicate_focus #a488d9
set border_dedicate_unfocus #574b70
set border_catchall_focus #87afd7
set border_catchall_unfocus #557493

# common/ease-of-use bindings:
bind off all
bind on Mod4+Escape exec banishmouse
bind on Mod4+Return exec urxvt -e tmux -f /howl/conf/tmux/tmux.conf -L xorg
bind on Mod4+Shift+Return exec urxvt
bind on Mod4+Control+BackSpace kill
bind on Mod4+Shift+q quit

# media and other bindings:
bind on Mod4+Print exec import -window root /howl/foto/shot/$(date +%Y_%m_%d-%H%M%S).png"
bind on Mod4+Shift+Delete exec alock -bg image:file=/howl/foto/wall/beheading.png -cursor glyph -auth pam >&/dev/null
bind on Control+XF86MonBrightnessUp exec moodlight --max
bind on XF86MonBrightnessUp exec moodlight --increase
bind on XF86MonBrightnessDown exec moodlight --decrease
bind on XF86AudioRaiseVolume exec ossvol --increase 1
bind on XF86AudioLowerVolume exec ossvalt --decrease 1
bind on XF86AudioMute exec ossvalt -m
bind on Mod4+Shift+y exec mifo --prev
bind on Mod4+Shift+u exec mifo --toggle
bind on Mod4+Shift+i exec mifo --stop
bind on Mod4+Shift+o exec mifo --next
#bind on Mod4+Shift+a exec --add
#bind on Mod4+Shift+d exec --remove
bind on Mod4+Shift+t exec mifo --toggle

# prompt bindings:
bind on Mod4+semicolon exec dmenu_run -p 'Execute: '
bind on Mod4+Shift+semicolon exec manread
bind on Mod4+Control+semicolon command
bind on Mod4+w switch window
bind on Mod4+g switch group

# mode/singular bindings:
bind on Mod4+c catchall flip
bind on Mod4+s stack flip
bind on Mod4+d dedicate flip
bind on Mod4+b refresh
bind on Mod4+z remove
bind on Mod4+u undo
bind on Mod4+o only

# directional/movement bindings:
bind on Mod4+h focus left
bind on Mod4+j focus down
bind on Mod4+k focus up
bind on Mod4+l focus right
bind on Mod4+9 resize left
bind on Mod4+0 resize right
bind on Mod4+Shift+9 resize up
bind on Mod4+Shift+0 resize down
bind on Mod4+Shift+h slide left
bind on Mod4+Shift+j slide down
bind on Mod4+Shift+k slide up
bind on Mod4+Shift+l slide right
bind on Mod4+Control+h swap left
bind on Mod4+Control+j swap down
bind on Mod4+Control+k swap up
bind on Mod4+Control+l swap right

# cycle/split bindings:
bind on Mod4+n cycle local next
bind on Mod4+p cycle local prev
bind on Mod4+Shift+n cycle next
bind on Mod4+Shift+p cycle prev
bind on Mod4+plus hsplit 1/2
bind on Mod4+minus vsplit 1/2
bind on Mod4+Shift+plus hsplit 33%
bind on Mod4+Shift+minus vsplit 37%
bind on Mod4+Control+plus hsplit 69%
bind on Mod4+Control+minus vsplit 66%

# group bindings:
bind on Mod4+grave exec /howl/conf/musca/pseudoscratchpad
bind on Mod4+1 use |1
bind on Mod4+2 use |2
bind on Mod4+3 use |3
bind on Mod4+4 use |4
bind on Mod4+5 use |5
bind on Mod4+5 use |6
bind on Mod4+Shift+grave move !
bind on Mod4+Shift+1 move |1
bind on Mod4+Shift+2 move |2
bind on Mod4+Shift+3 move |3
bind on Mod4+Shift+4 move |4
bind on Mod4+Shift+5 move |5
bind on Mod4+Shift+5 move |6
bind on Mod4+Control+1 exec musca -c "move |1" ; musca -c "use |1"
bind on Mod4+Control+2 exec musca -c "move |2" ; musca -c "use |2"
bind on Mod4+Control+3 exec musca -c "move |3" ; musca -c "use |3"
bind on Mod4+Control+4 exec musca -c "move |4" ; musca -c "use |4"
bind on Mod4+Control+5 exec musca -c "move |5" ; musca -c "use |5"
bind on Mod4+Control+6 exec musca -c "move |6" ; musca -c "use |6"
bind on Mod4+period use (next)
bind on Mod4+comma use (prev)

# startup stuff:
name !
#pad 0 0 24 0
add |1
add |2
add |3
add |4
add |5
add |6
use |1

# functions
## to unpack files
extr() {
		if [ -f $1 ] ; then 
			case $1 in
             *.tar.bz2)   tar xjf $1    ;;
             *.tar.gz)    tar xzf $1    ;;
             *.bz2)       bunzip2 $1    ;;
             *.rar)       unrar e $1    ;;
             *.gz)        gunzip $1     ;;
             *.tar)       tar xf $1     ;;
             *.tbz2)      tar xjf $1    ;;
             *.tgz)       tar xzf $1    ;;
             *.zip)       unzip $1      ;;
             *.Z)         uncompress $1 ;;
             *.7z)        7z x $1    	;;
	     *.xz)	  unxz -vk $1	;;
             *)           echo "'$1' cannot be extracted via extr()" ;;
         esac
     else
         echo "'$1' is not a valid file"
     fi
}

## to start, stop or restart daemons
function rcstart() { 
	sudo /etc/rc.d/$1 start; 
}

function rcstop() { 
	sudo /etc/rc.d/$1 stop; 
}

function rcrestart() { 
	sudo /etc/rc.d/$1 restart; 
}

function reprobe() {
	sudo modprobe -r $1
	sudo modprobe $1
}

## to make a directory and cd into immediately
function mkcd() {
    mkdir "$@"
    cd "$@"
}

## to go up a specified amount of levels
function up(){
  local arg=${1:-1};
  while [ $arg -gt 0 ]; do
    cd .. >&/dev/null;
    arg=$(($arg - 1));
  done
}

function up(){
  local arg=${1:-1};
  while [ $arg -gt 0 ]; do
    cd .. >&/dev/null;
    arg=$(($arg - 1));
  done
}

function back() {
  pushd -q -$1
  }

function mkcd() {
  mkdir "$@"
  cd "$@"
}

function cpf () {             
if [[ -d $*[-1] ]]; then
  cp $* && cd $*[-1]
elif [[ -d ${*[-1]%/*} ]]; then
  cp $* && cd ${*[-1]%/*}
fi
}

function mvf () {             
if [[ -d $*[-1] ]]; then
  mv $* && cd $*[-1]
elif [[ -d ${*[-1]%/*} ]]; then
  mv $* && cd ${*[-1]%/*}
fi
}

function reboot() {
  killall ssh-agent &>/dev/null
  rm $HOME/.ssh/environment &>/dev/null
  sudo reboot
}
function poweroff() {
  killall ssh-agent &>/dev/null
  rm $HOME/.ssh/environment &>/dev/null
  sudo poweroff
}

extr() {
  if [ -f $1 ] ; then 
    case $1 in
      *.tar.bz2)   tar xjf $1    ;;
      *.tar.gz)    tar xzf $1    ;;
      *.bz2)       bunzip2 $1    ;;
      *.rar)       unrar e $1    ;;
      *.gz)        gunzip $1     ;;
      *.tar)       tar xf $1     ;;
      *.tbz2)      tar xjf $1    ;;
      *.tgz)       tar xzf $1    ;;
      *.zip)       unzip $1      ;;
      *.Z)         uncompress $1 ;;
      *.7z)        7z x $1    	 ;;
      *.xz)        unxz -vk $1	 ;;
      *.lzma)      unlzma -vk $1 ;;
      *)           echo "'$1' cannot be extracted via extr()" ;;
    esac
  else
    echo "'$1' is not a valid file"
fi
}

function rcstart() { 
  sudo /etc/rc.d/$1 start; 
}
function rcstop() { 
  sudo /etc/rc.d/$1 stop; 
}
function rcrestart() { 
  sudo /etc/rc.d/$1 restart; 
}
function reprobe() {
  sudo modprobe -r $1
  sudo modprobe $1
}

function todo() {
  local arg=$HOME/othe
  case $1 in
    -l ) shift
    ls -1 $arg/.TODO*
    ;;
    * ) vim $arg/.TODO_$@
    ;;
  esac
}

function sd() {
  case $1 in
    -w | -wordnet ) shift
    sdcv -u "WordNet" $@
    ;;
    -t | -thesaurus ) shift
    sdcv -u "English Thesaurus" $@
    ;;
    -a | -all ) shift
    sdcv $@ | less
    ;;
    *) sdcv -u "WordNet" $@
  esac
}

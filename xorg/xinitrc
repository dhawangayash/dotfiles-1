#!/bin/zsh
# resources:
/usr/bin/xset +fp '/usr/share/fonts/local'
/usr/bin/xset fp rehash
/usr/bin/xrdb -load ${XDG_CONFIG_DIR:-$HOME}/xorg/Xdefaults
#/usr/bin/xmodmap ${XDG_CONFIG_DIR:-$HOME}/keymaps/dvausler.xmodmap
/usr/bin/xmodmap ${XDG_CONFIG_DIR:-$HOME}/keymaps/overlay-mods.xmodmap

# extras:
/usr/bin/xsetroot -cursor_name left_ptr -solid '#151515'
/usr/local/bin/zaprat --disable
#/usr/bin/sxhkd -c ${XDG_CONFIG_DIR:-$HOME}/bspwm/sxhkd.conf &

# window-manager:
#exec /usr/bin/bspwm
exec /usr/bin/herbstluftwm &>${XDG_CONFIG_DIR:-$HOME}/herbstluftwm/log

#!/bin/zsh
# resources:
/usr/bin/xrdb -load ${XDG_CONFIG_DIR:-$HOME}/xorg/Xdefaults
/usr/bin/xsetroot -cursor_name left_ptr &

# keyboard:
/usr/bin/xmodmap -e "keycode 133 = Alt_L"
/usr/bin/xmodmap -e "keycode 135 = Alt_R"
/usr/bin/xmodmap -e "keycode 64 = Super_L"
/usr/bin/xmodmap -e "keycode 108 = Super_R"
/usr/bin/xmodmap -e "clear Mod1"
/usr/bin/xmodmap -e "clear Mod4"
/usr/bin/xmodmap -e "add Mod1 = Alt_L Alt_R"
/usr/bin/xmodmap -e "add Mod4 = Super_L Super_R"

# mouse/synclient:
BANISHFILE="/dev/shm/.1009/banishmouse"
[[ ! -f $BANISHFILE ]] || rm -f $BANISHFILE
/usr/local/bin/banishmouse

# wallpaper:
/usr/bin/display -window root -resize 1600x900! ${XDG_PICTURES_DIR:-${H:-/howl}/foto}/wall/wallpaper-31278.png

# window-manager:
exec /usr/bin/stumpwm &>>${XDG_CONFIG_DIR:-$HOME}/stumpwm/storage/log.lisp

#! /bin/zsh
##############################################
## locate: ${XDG_CONFIG_HOME}/xorg/xinitrc  ##
## author: milomouse (github.com/milomouse) ##
## detail: X.Org init configuration file    ##
##############################################

##+ RESOURCES:
/usr/bin/xrdb -load ${XDG_CONFIG_HOME:-$HOME}/xorg/Xdefaults
#/usr/bin/xmodmap ${XDG_CONFIG_HOME:-$HOME}/keymaps/dvausler.xmodmap
/usr/bin/xmodmap ${XDG_CONFIG_HOME:-$HOME}/keymaps/overlay-mods.xmodmap

##+ EXTRAS:
/usr/bin/xsetroot -cursor_name left_ptr -solid '#151515'
/usr/bin/display -window root -resize 1600x900! ${XDG_PICTURES_DIR:-$HOME/../foto}/wall/astrolithe.png
/usr/local/bin/zaprat --disable

##+ WINDOW MANAGER:
## \ (hybrid manual tiling):
#exec /howl/conf/herbstluftwm/dzen.zsh &>/dev/null &
#exec /usr/bin/herbstluftwm

## \ (hybrid dynamic tiling):
export BSPWM_PANEL_FIFO="/tmp/user-keep/${USER}/bspwm-fifo"
/usr/bin/sxhkd -c ${XDG_CONFIG_HOME:-$HOME}/bspwm/sxhkdrc &
exec /howl/conf/bspwm/dzen.zsh &>/dev/null &
[[ -p ${BSPWM_PANEL_FIFO} ]] && rm ${BSPWM_PANEL_FIFO}
mkfifo ${BSPWM_PANEL_FIFO}
exec /usr/bin/bspwm -s ${BSPWM_PANEL_FIFO}

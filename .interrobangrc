## | InterobangRC
## |
## | Lines starting with a # are ignored as comments, but this file is
## | not processed by a shell interpreter.

set font      = -misc-fixed-medium-r-semicondensed-*-12-110-75-75-c-60-iso10646-1
set geometry  = 1578x15+15+2
set border    = 0px #101010
set colors    = #68D0E0 #101010 #101010 #715093 #68B0E0 #202020
set bangchar  = !
set run_hook  = %s || (notify-send "interrobang" "command not valid or exit non-zero")

set autocomp  = 1
set list      = true
set last      = true
set margin    = -80

bang term     = urxvt -e %s
bang web      = luakit %s
bang pdf      = zathura %s
bang man      = urxvt -e man %s
bang calc     = echo "interrobang ignored \"%s\""
bang ?        = echo "interrobang ignored \"%s\""

tab default   = percontation "%s" %s | sort -u
#tab default   = compgen -P "%s" -cf %s
tab calc      = str="%s%s"; echo "!calc $(echo ${str#\!calc} | bc -l)"
tab ?         = ignore="%s%s"; awk '/^bang/ {print $2;}' ~/.interrobangrc
#tab logout    = echo -e "cancel\nshutdown\nsleep\nreboot\nlogout" | grep "^%s%s"

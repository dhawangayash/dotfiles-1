## ~/.config/musca/musca_start
## milomouse

# try not to list default settings
set startup /home/milo/.config/musca/musca_start
set frame_display_hidden 2
set frame_resize 10
hook on ^only border off
# borders
set border_focus #a488d9
set border_unfocus #303030
set border_catchall_focus #b8ddea
set border_catchall_unfocus #b8ddea
set border_dedicate_focus #ffadcc
set border_dedicate_unfocus #ffadcc
# common/ease-of-use bindings
bind off all
bind on Mod1+Return exec urxvt -e tmux
bind on Mod1+Shift+Return exec urxvt
bind on Mod1+p exec urxvt -e ncmpcpp
bind on Mod1+Shift+BackSpace kill
bind on Mod1+Shift+q quit
# prompt bindings
bind on Mod1+m command
bind on Mod1+e shell
bind on Mod1+g switch group
bind on Mod1+w switch window
# mode/singular bindings
bind on Mod1+a catchall flip
bind on Mod1+s stack flip
bind on Mod1+d dedicate flip
bind on Mod1+b refresh
bind on Mod1+r remove
bind on Mod1+o only
bind on Mod1+u undo
# directional/movement bindings
bind on Mod1+h focus left
bind on Mod1+j focus down
bind on Mod1+k focus up
bind on Mod1+l focus right
bind on Mod1+Control+h resize left
bind on Mod1+Control+j resize down
bind on Mod1+Control+k resize up
bind on Mod1+Control+l resize right
bind on Mod1+Shift+h slide left
bind on Mod1+Shift+j slide down
bind on Mod1+Shift+k slide up
bind on Mod1+Shift+l slide right
bind on Mod1+Mod4+h swap left
bind on Mod1+Mod4+j swap down
bind on Mod1+Mod4+k swap up
bind on Mod1+Mod4+l swap right
# cycle/split bindings
bind on Mod1+n cycle local
bind on Mod1+Shift+n cycle
bind on Mod1+bracketleft cycle prev
bind on Mod1+bracketright cycle next
bind on Mod1+plus hsplit 1/2
bind on Mod1+minus vsplit 1/2
bind on Mod1+Shift+plus hsplit 33%
bind on Mod1+Shift+minus vsplit 33%
# group bindings
bind on Mod1+grave use default
bind on Mod1+1 use one
bind on Mod1+2 use two
bind on Mod1+3 use three
bind on Mod1+4 use four
bind on Mod1+Shift+grave move default
bind on Mod1+Shift+1 move one
bind on Mod1+Shift+2 move two
bind on Mod1+Shift+3 move three
bind on Mod1+Shift+4 move four
bind on Mod1+period use (next)
bind on Mod1+comma use (prev)
# layout bindings
bind on Mod1+F1 load /home/milo/.config/musca/2v-2h
bind on Mod1+F2 load /home/milo/.config/musca/2v-2h_1big
bind on Mod1+F3 load /home/milo/.config/musca/1v-2h
bind on Mod1+F4 load /home/milo/.config/musca/2v-3h
# startup stuff
use 0
exec urxvt -e tmux

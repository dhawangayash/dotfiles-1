## ~/.config/musca/musca_start
## milomouse

# try not to list default settings
set startup /home/milo/.config/musca/musca_start
set frame_display_hidden 2
set frame_resize 10
set dmenu dmenu -i
hook on ^only border off
# borders
set border_focus #a488d9
set border_unfocus #303030
set border_catchall_focus #b8ddea
set border_catchall_unfocus #b8ddea
set border_dedicate_focus #ffadcc
set border_dedicate_unfocus #ffadcc
# common/ease-of-use bindings
bind off all
bind on Mod4+r run /home/milo/.config/musca/1only
bind on Mod4+Return exec urxvt -e tmux
bind on Mod4+Shift+Return exec urxvt
bind on Mod4+p exec urxvt -e ncmpcpp
bind on Mod4+Shift+BackSpace kill
bind on Mod4+Shift+q quit
# prompt bindings
bind on Mod4+m command
bind on Mod4+i shell
bind on Mod4+g switch group
bind on Mod4+w switch window
# mode/singular bindings
bind on Mod4+a catchall flip
bind on Mod4+s stack flip
bind on Mod4+d dedicate flip
bind on Mod4+b refresh
bind on Mod4+z remove
bind on Mod4+u undo
bind on Mod4+o only
# directional/movement bindings
bind on Mod4+h focus left
bind on Mod4+j focus down
bind on Mod4+k focus up
bind on Mod4+l focus right
bind on Mod4+Control+h resize left
bind on Mod4+Control+j resize down
bind on Mod4+Control+k resize up
bind on Mod4+Control+l resize right
bind on Mod4+Shift+h slide left
bind on Mod4+Shift+j slide down
bind on Mod4+Shift+k slide up
bind on Mod4+Shift+l slide right
bind on Mod4+Mod1+h swap left
bind on Mod4+Mod1+j swap down
bind on Mod4+Mod1+k swap up
bind on Mod4+Mod1+l swap right
# cycle/split bindings
bind on Mod4+n cycle local
bind on Mod4+Shift+n cycle
bind on Mod4+bracketleft cycle prev
bind on Mod4+bracketright cycle next
bind on Mod4+plus hsplit 1/2
bind on Mod4+minus vsplit 1/2
bind on Mod4+Shift+plus hsplit 33%
bind on Mod4+Shift+minus vsplit 33%
# group bindings
bind on Mod4+grave use default
bind on Mod4+1 use one
bind on Mod4+2 use two
bind on Mod4+3 use three
bind on Mod4+4 use four
bind on Mod4+Shift+grave move default
bind on Mod4+Shift+1 move one
bind on Mod4+Shift+2 move two
bind on Mod4+Shift+3 move three
bind on Mod4+Shift+4 move four
bind on Mod4+period use (next)
bind on Mod4+comma use (prev)
# layout bindings
bind on Mod4+F1 load /home/milo/.config/musca/1only
bind on Mod4+F2 load /home/milo/.config/musca/2v-3h
bind on Mod4+F3 load /home/milo/.config/musca/1v-2h
bind on Mod4+F4 load /home/milo/.config/musca/2v-2h
# startup stuff
use 0
exec urxvt -e tmux

# use history, but skip certain cmds/args from being written:
function zshaddhistory() {
  local line cmd
  line=${1%%$'\n'} ; cmd=${line%% *}
  [[ ${#line} -ge 5
      && ${cmd} != (cp|cd|man|history|e|exit)
      && ${cmd} != (l[axclsftm]|srm|rm|rms)
      && ${cmd} != (losetup|aespipe|crypsetup)
      && ${cmd} != (baer|baerp|habs|makepkg)
      && ${cmd} != (pacman|pacman-color|yaourt|bauerbill)
      && ${cmd} != ([mszx]edit|[zx]load|wika)
      && ${arg} != (*unrl*|*spar*)
  ]] && (( ! $argv[(I)*unrl*|*spar*] ))
}

# go up Nth amount of directories:
function up(){
  local arg=${1:-1};
  while [ ${arg} -gt 0 ]; do
    cd .. >&/dev/null;
    arg=$((${arg} - 1));
  done
}

# jump to previous directory by Nth amount or last visited:
function back() {
  if [[ -n $1 ]]; then
    case $1 in
      <->)  pushd -q +$1 2>/dev/null ;;
      *)    dirs -lpv|sed '2s|$| \[last\]|'
    esac
  else
    pushd -q - 2>/dev/null
  fi
}

# copy and follow file to new dir:
function cpf() {
  if [[ -d $*[-1] ]]; then
    cp $* && cd $*[-1]
  elif [[ -d ${*[-1]%/*} ]]; then
    cp $* && cd ${*[-1]%/*}
  fi
}

# move and follow file to new dir:
function mvf() {
  if [[ -d $*[-1] ]]; then
    mv $* && cd $*[-1]
  elif [[ -d ${*[-1]%/*} ]]; then
    mv $* && cd ${*[-1]%/*}
  fi
}

# use 'real' program, not an alias/function, etc:
function real() {
  if [[ -n $1 ]]; then
    prog=$(/usr/bin/which $1) &>/dev/null
    if [[ -x $(print ${prog}) ]]; then
      ${prog} ${@:/$1}
    fi
  else /bin/false ; fi
}


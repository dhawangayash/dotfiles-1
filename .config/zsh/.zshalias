# file management:
alias ls="ls -hF --time-style='+%m-%d-%y' --color=auto --group-directories-first"
alias la="ls -A"
alias lc="la -d .*"
alias lb="la -Ssr"
alias lf="la -d *(-/DN)"
alias lt="la -tr"
alias lls="ls -l"
alias lla="lls -A"
alias llc="lla -d .*"
alias llb="lla -Ssr"
alias lbb="la -1Ssr"
alias llt="lla -tr"
alias llf="lla -d *(-/DN)"
alias llm="llt --time=use -u -- **/*(D.om[1,40])"
alias rd="rm -r"
alias rds="srm -Evr"
alias rms="srm -Ev"
alias cl="clear"
alias e="bye"

# useless quick views/edits:
alias svim="sudo vim"
alias wika="w3m /usr/share/doc/arch-wiki/html/index.html"
alias xoc="w3m /usr/share/doc/xmonad-contrib-darcs/html"
alias uedit="vim $XDG_CONFIG_DIR/uzbl/config"
alias medit="vim $XDG_CONFIG_DIR/musca/musca_start"
alias xedit="vim $HOME/.Xdefaults"
alias xodit="vim $HOME/.xmonad/xmonad.hs"
alias zedit="vim $HOME/.zshrc"
alias zedin="vim $XDG_CONFIG_DIR/zsh/.zshfn"
alias zedia="vim $XDG_CONFIG_DIR/zsh/.zshalias"
alias zload=". $HOME/.zshrc"

# basic system stuff:
alias startx="startx -- -dpi 120"
alias diff="colordiff"
alias grep="grep --color=auto"
alias ff="find |grep -"
alias dfu="df -hTP"
alias psu="ps fxo etime,pid,pmem,pcpu,command"
alias psr="ps -u root fo etime,user,pid,pmem,pcpu,command"
alias daemons="ls /var/run/daemons"
alias reboot="sudo reboot"
alias {poweroff,pow}="sudo poweroff"

# media shortcuts:
alias mix2="ossmix codec1.jack.int-speaker.mode mix2 >>/dev/null && echo 'Mixer set to PC Speaker'"
alias mix3="ossmix codec1.jack.int-speaker.mode mix3 >>/dev/null && echo 'Mixer set to Headphones'"
alias unrarall='for file in `ls *.rar`; do unrar -x r $file; done'
alias unzipall='for file in `ls *.zip`; do unzip $file; done'
alias siteget='wget --recursive --page-requisites --convert-links --html-extension --no-parent --wait=10 --limit-rate=20K -U Mozilla -l' #depth, then url
alias rot='rtorrent -o http_capath=/etc/ssl/certs'
#alias rec='ffmpeg -f x11grab -s 1366x768 - r 150 -i :0.0 -sameq /tmp/capture.mpg'

# database/package management:
alias upf="sudo fc-cache -vf"
alias upd="sudo updatedb"
alias baer="bauerbill"
alias {baerp,pacman}="sudo pacman-color"
alias ay="yaourt"
alias aive="ay -Q --date|tee $HOME/othe/archive/$(date +%m_%d_%y) >>/dev/null"
alias lasi="3view $HOME/othe/archive/$(ls -ltr $HOME/othe/archive |tail -1|awk '{print $7}')"
alias lasid="3view $HOME/othe/archive/$(ls -ltr $HOME/othe/archive |tail -2|head -1|awk '{print $7}')"

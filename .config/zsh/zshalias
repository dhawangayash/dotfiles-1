# file management:
alias ls="/bin/ls -h --file-type --time-style='+%m-%d-%y %H%M%S' --color=auto --group-directories-first"
alias lss="ls -- *(D.om)"
alias la="ls -A"              ; alias laa="ls -A -- *(D.om)"
alias lc="la -d .*"           ; alias lcc="la -d .*(D.om)"
alias lb="la -Ssr"            ; alias lbb="lb -- *(D.om)"
alias lf="la -Xd *(-/DN)"
alias lt="la -tr"             ; alias ltt="lt -- *(D.om)"
alias lm="lt --time=use -u"   ; alias lmm="lm -- *(D.om)"
alias lx="la -X"              ; alias lxx="lx -- *(D.om)"
alias lls="ls -l"             ; alias llss="lls -- *(D.om)"
alias lla="lls -A"            ; alias llaa="lla -- *(D.om)"
alias llc="lla -d .*"         ; alias llcc="lla -d .*(D.om)"
alias llb="lla -Ssr"          ; alias llbb="llb -- *(D.om)"
alias llt="lla -tr"           ; alias lltt="llt -- *(D.om)"
alias llf="lla -Xd *(-/DN)"
alias llm="llt --time=use -u" ; alias llmm="llm -- *(D.om)"
alias llx="lx -l"             ; alias llxx="llx -- *(D.om)"
alias rd="rm -r"
alias rds="srm -Evr"
alias rms="srm -Ev"
alias cl="clear"
alias e="bye"

# useless quick views/edits:
alias wika="${BROWSER:-/usr/bin/w3m} /usr/share/doc/arch-wiki/html/index.html"
alias xoc="${BROWSER:-/usr/bin/w3m} /usr/share/doc/xmonad-contrib-darcs/html"
alias medit="${EDITOR:-/usr/bin/vim} ${XDG_CONFIG_DIR:-${HOME}/.config}/musca/musca_start"
alias sedit="${EDITOR:-/usr/bin/vim} -p ${HOME}/.stumpwmrc ${XDG_CONFIG_DIR:-${HOME}/.config}/stumpwm/{functions,macros,commands,hooks,key-maps}.lisp"
alias xodit="${EDITOR:-/usr/bin/vim} ${HOME}/.xmonad/xmonad.hs"
alias xedit="${EDITOR:-/usr/bin/vim} -p ${XDG_CONFIG_DIR:-${HOME}/.config}/xorg/{xinitrc,Xdefaults}"
alias zedit="${EDITOR:-/usr/bin/vim} -p ${HOME}/.{zshrc,config/zsh/{zshfn,zshalias}}"
alias zload=". ${HOME}/.zshrc"
alias xload="xrdb -load ${XDG_CONFIG_DIR:-${HOME}/.config}/xorg/Xdefaults &>/dev/null"

# program masquing:
alias svim="sudo ${EDITOR:-/usr/bin/vim}"
alias info="/usr/bin/info --vi-keys"
alias diff="colordiff"
alias grep="grep --color=auto"
alias tmux='tmux -f ${XDG_CONFIG_DIR:-${HOME}/.config}/tmux/tmux.conf'
alias mutt='mutt -F ${XDG_CONFIG_DIR:-${HOME}/.config}/mutt/muttrc'
alias xskat='xskat -opt ${XDG_CONFIG_DIR:-${HOME}/.config}/xorg/xskat.opt -list ${XDG_CONFIG_DIR:-$HOME/.config}/xorg/xskat.lst'
alias offlineimap='offlineimap -c ${XDG_CONFIG_DIR:-${HOME}/.config}/offlineimap/offlineimaprc'
alias xsel='xsel --logfile /dev/shm/xsel.log'
alias {rot,rtorrent}='/usr/bin/rtorrent -o http_capath=/etc/ssl/certs'
alias btpd='/usr/bin/btpd -d ${XDG_CONFIG_DIR:-${HOME}/.config}/btpd'
alias btcli='/usr/bin/btcli -d ${XDG_CONFIG_DIR:-${HOME}/.config}/btpd'
alias startx="/usr/local/bin/go $@"

# system/media shortcuts:
alias psu="print 'ELASPING %CPU NI +?  LWPID - COMMAND';ps -U root,http,postgres --deselect -C tmux,urxvt -H hoetime:8,%cpu:4,ni:2,stat:3,pid:5,rtprio:1,args"
alias psr="print 'ELASPING %CPU NI +?  LWPID - COMMAND';ps -u root -U root -H hoetime:8,%cpu:4,ni:2,stat:3,pid:5,rtprio:1,args"
alias psa="print 'ELASPING USER %CPU NI +?  LWPID - COMMAND';ps -H haxoetime:8,user:4,%cpu:4,ni:2,stat:3,pid:5,rtprio:1,args"
alias pso="print 'ELASPING USER %CPU NI +?  LWPID - COMMAND';ps -U root,milo --deselect -u root,milo -H hoetime:8,user:4,%cpu:4,ni:2,stat:3,pid:5,rtprio:1,args"
alias dfu="df -hTP;print - '------------------------------------------------------';df -hTP --total|tail -1"
alias {lavg,loadavg}='print ${$(</proc/loadavg)[1,3]}'
alias daemons="lt /var/run/daemons"
alias reboot="sudo reboot"
alias {poweroff,pow}="sudo poweroff"
alias mix2="ossmix codec1.jack.int-speaker.mode mix2 1>/dev/null && print 'Mixer set to PC Speaker'"
alias mix3="ossmix codec1.jack.int-speaker.mode mix3 1>/dev/null && print 'Mixer set to Headphones'"
#alias rec='ffmpeg -f x11grab -s 1366x768 - r 150 -i :0.0 -sameq /tmp/capture.mpg'
alias siteget='wget --recursive --page-requisites --convert-links --html-extension --no-parent --wait=10 --limit-rate=20K -U Mozilla -l' #depth, then url
alias synt="highlight -t 2 -k fixed -K 8 -l -j 3 -s candy"

# database/package management:
alias upf="sudo fc-cache -vf"
alias upd="sudo updatedb"
alias baer="bauerbill"
alias {baerp,pacman}="sudo pacman-color"

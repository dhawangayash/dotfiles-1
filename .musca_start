set frame_display_hidden 0
set frame_resize 10

set border_focus #a488d9

bind on Mod1+m command
bind on Mod1+e shell
bind on Mod1+Return exec urxvt
bind on Mod1+h focus left
bind on Mod1+j focus down
bind on Mod1+k focus up
bind on Mod1+l focus right
bind on Mod1+r+h resize left
bind on Mod1+r+j resize down
bind on Mod1+r+k resize up
bind on Mod1+r+l resize right
bind on Mod1+Shift+h slide left
bind on Mod1+Shift+j slide down
bind on Mod1+Shift+k slide up
bind on Mod1+Shift+l slide right
bind on Mod1+Tab+h swap left
bind on Mod1+Tab+j swap down
bind on Mod1+Tab+k swap up
bind on Mod1+Tab+l swap right
bind on Mod1+p+grave move 0
bind on Mod1+p+1 move 1
bind on Mod1+p+2 move 2
bind on Mod1+p+3 move 3
bind on Mod1+p+4 move 4
bind on Mod1+n cycle local
bind on Mod1+9 cycle next
bind on Mod1+0 cycle prev
bind on Mod1+period use (next)
bind on Mod1+comma use (prev)
bind on Mod1+g switch group
bind on Mod1+w switch window
bind on Mod1+o only
bind on Mod1+b refresh
bind on Mod1+Shift+backslash hsplit 1/2
bind on Mod1+Shift+underscore vsplit 1/2
bind on Mod1+minus hsplit 33%
bind on Mod1+plus vsplit 33%
bind on Mod1+s stack flip
bind on Mod1+d dedicate flip
bind on Mod1+a catchall flip
bind on Mod1+u undo
bind on Mod1+r remove
bind on Mod1+z kill
bind on Mod1+Shift+q quit

screen0
add work
add comm
hsplit 1/2
exec urxvt
